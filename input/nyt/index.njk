      <div class="single">
        {{ macros.media(project.assets[0].src, project.assets[0].type) }}
      </div>
      {% else %}
      <div class="gallery">
        {% for media in project.assets %}
        <div class="slide">
          {{ macros.media(media.src, media.type, media.effects) }}
        </div>
        {% endfor %}
      </div>

      {% endif %}

      <div class="description text-width">
        <h3>{{ project.title }}</h3>
        <p>{{ project.description | md | safe}}</p>
